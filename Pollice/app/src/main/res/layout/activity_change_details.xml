<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".changeDetails"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Details"
        android:textSize="60sp"
        android:textAlignment="center"
        android:maxLines="1"
        android:textStyle="bold"
        android:textScaleX="1"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:textColor="@color/black"
                    android:textColorHint="@color/back_hint"
                    android:maxLines="1"
                    android:inputType="text"
                    android:id="@+id/CngFirstName"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:textColor="@color/black"
                    android:textColorHint="@color/back_hint"
                    android:maxLines="1"
                    android:inputType="text"
                    android:id="@+id/CngLastName"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>
            </android.support.design.widget.TextInputLayout>
           <!-- <android.support.design.widget.TextInputLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:textColor="@color/black"
                    android:textColorHint="@color/back_hint"
                    android:maxLines="1"
                    android:inputType="text"
                    android:id="@+id/CnEmail"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>
            </android.support.design.widget.TextInputLayout>-->
            <android.support.design.widget.TextInputLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact NO"
                    android:textColor="@color/black"
                    android:textColorHint="@color/back_hint"
                    android:maxLines="1"
                    android:inputType="text"
                    android:id="@+id/CngContactNO"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Permanent Address"
                    android:textColor="@color/black"
                    android:textColorHint="@color/back_hint"
                    android:maxLines="1"
                    android:inputType="text"
                    android:id="@+id/CngAddress"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Cancel"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textScaleX=".8"
                    android:layout_margin="5dp"
                    android:onClick="cancel"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Save"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textScaleX=".8"
                    android:layout_margin="5dp"
                    android:onClick="save"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>