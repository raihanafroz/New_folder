<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Complain_for_other"
    android:orientation="vertical"
    android:gravity="center|top"
    android:padding="2dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complain for other"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textScaleX="1"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <Spinner
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/thana"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:layout_marginRight="26dp"
                android:textSize="15sp"
                android:spinnerMode="dropdown">
            </Spinner>

            <android.support.design.widget.TextInputLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Victim Name"
                    android:textColor="@color/black"
                    android:textColorHint="@color/back_hint"
                    android:maxLines="1"
                    android:inputType="text"
                    android:id="@+id/name"
                    android:padding="15dp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Victim Phone No"
                    android:textColor="@color/black"
                    android:textColorHint="@color/back_hint"
                    android:maxLines="1"
                    android:inputType="text"
                    android:id="@+id/phone"
                    android:padding="15dp"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Victim's Address"
                    android:textColor="@color/black"
                    android:textColorHint="@color/back_hint"
                    android:maxLines="1"
                    android:inputType="text"
                    android:id="@+id/addres"
                    android:padding="15dp"/>
            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cause"
                    android:textColor="@color/black"
                    android:textColorHint="@color/back_hint"
                    android:maxLines="2"
                    android:inputType="text"
                    android:id="@+id/complainCuse"
                    android:padding="15dp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Occurrence place/area"
                    android:textColor="@color/black"
                    android:textColorHint="@color/back_hint"
                    android:maxLines="1"
                    android:inputType="text"
                    android:id="@+id/complainAddress"
                    android:padding="15dp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/shipper_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/complainDescription"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#EDF3EB"
                    android:gravity="top"
                    android:hint="Description"
                    android:inputType="textMultiLine"
                    android:overScrollMode="always"
                    android:padding="15dp"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical" />
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textScaleX="1.2"
                    android:text="Clear"
                    android:onClick="clearField"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textScaleX="1.2"
                    android:text="Send"
                    android:onClick="send_complain"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>