<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminViewUserDetails"
    android:orientation="vertical">
    <include
        layout="@layout/default_app_bar"
        android:id="@+id/admin_user_details_app_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/header_cover_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/colorPrimary"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/admin_user_details_pic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-130dp"
                android:elevation="5dp"
                android:background="@drawable/border_10dp"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/boy" />

            <RelativeLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_cover_image"
                android:elevation="4dp"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="Owner"
                    android:id="@+id/admin_user_details_Name"
                    android:fontFamily="@font/kurale"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textScaleX="1.2"
                    android:textColor="@color/black"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/profile_layout"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:elevation="4dp"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/shadow">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:gravity="left">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="2dp"
                            android:gravity="center|left">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="E-mail: "
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:fontFamily="@font/kurale"
                                android:padding="2dp"
                                android:maxLines="1"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Email@email.com"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:fontFamily="@font/kurale"
                                android:padding="2dp"
                                android:maxLines="1"
                                android:id="@+id/admin_user_details__email"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="2dp"
                            android:gravity="center|left">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Gender: "
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:fontFamily="@font/kurale"
                                android:padding="2dp"
                                android:maxLines="1"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Male/Female"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:fontFamily="@font/kurale"
                                android:padding="2dp"
                                android:maxLines="1"
                                android:id="@+id/admin_user_details_gender"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="2dp"
                            android:gravity="center|left">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Address: "
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:fontFamily="@font/kurale"
                                android:padding="2dp"
                                android:maxLines="1"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bangladesh"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:fontFamily="@font/kurale"
                                android:padding="2dp"
                                android:maxLines="1"
                                android:id="@+id/admin_user_details_address"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="2dp"
                            android:gravity="center|left">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="ContactNO: "
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:fontFamily="@font/kurale"
                                android:padding="2dp"
                                android:maxLines="1"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0123456789"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:fontFamily="@font/kurale"
                                android:padding="2dp"
                                android:maxLines="1"
                                android:id="@+id/admin_user_details_phone"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="2dp"
                            android:gravity="center|left">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Created at: "
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:fontFamily="@font/kurale"
                                android:padding="2dp"
                                android:maxLines="1"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2019-11-28 12:12:12"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:fontFamily="@font/kurale"
                                android:padding="2dp"
                                android:maxLines="1"
                                android:id="@+id/admin_user_details_time"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>