<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/droid_serif_bold"
            android:text="Sign up"
            android:textColor="@color/page_title"
            android:textSize="26sp"
            android:textStyle="bold" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center|top"
                android:paddingBottom="30dp">

        <!--        first name of user-->
                <android.support.design.widget.TextInputLayout
                    android:layout_margin="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/signup_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/user_24dp"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/kurale"
                        android:hint="First Name"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/input_text_color"
                        android:textColorHint="@color/input_hint_color"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>

        <!--        last name of user-->
                <android.support.design.widget.TextInputLayout
                    android:layout_margin="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/signup_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/user_24dp"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/kurale"
                        android:hint="Last Name"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/input_text_color"
                        android:textColorHint="@color/input_hint_color"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>

        <!--        email of user-->
                <android.support.design.widget.TextInputLayout
                    android:layout_margin="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/signup_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/email_24dp"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/kurale"
                        android:hint="E-mail"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/input_text_color"
                        android:textColorHint="@color/input_hint_color"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>

        <!--        phone Number of user-->
                <android.support.design.widget.TextInputLayout
                    android:layout_margin="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/signup_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/phone_24dp"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/kurale"
                        android:hint="Phone"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/input_text_color"
                        android:textColorHint="@color/input_hint_color"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>


        <!--        address of user-->
                <android.support.design.widget.TextInputLayout
                    android:layout_margin="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/signup_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/home_24dp"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/kurale"
                        android:hint="Address"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/input_text_color"
                        android:textColorHint="@color/input_hint_color"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>



