                android:paddingRight="10dp"/>-->

            <android.support.design.widget.TextInputLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:textColor="@color/black"
                    android:textColorHint="@color/back_hint"
                    android:maxLines="1"
                    android:inputType="text"
                    android:id="@+id/ResLasstName"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>
            </android.support.design.widget.TextInputLayout>


            <!--<EditText
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail"
                android:textColor="@color/black"
                android:textColorHint="@color/back_hint"
                android:maxLines="1"
                android:inputType="text"
                android:id="@+id/ResEmail"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>-->

            <android.support.design.widget.TextInputLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="E-mail"
                    android:textColor="@color/black"
                    android:textColorHint="@color/back_hint"
                    android:maxLines="1"
                    android:inputType="text"
                    android:id="@+id/ResEmail"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>
            </android.support.design.widget.TextInputLayout>


            <!--<EditText
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Permanent Address"
                android:textColor="@color/black"
                android:textColorHint="@color/back_hint"
                android:maxLines="1"
                android:inputType="text"
                android:id="@+id/ResAddress"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>-->

            <android.support.design.widget.TextInputLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Permanent Address"
                    android:textColor="@color/black"
                    android:textColorHint="@color/back_hint"
                    android:maxLines="1"
                    android:inputType="text"
                    android:id="@+id/ResAddress"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>
            </android.support.design.widget.TextInputLayout>


            <!--<EditText
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact Number"
                android:textColor="@color/black"
                android:textColorHint="@color/back_hint"
                android:maxLines="1"
                android:inputType="number"
                android:id="@+id/ResContactNumber"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>-->

            <android.support.design.widget.TextInputLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact Number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/back_hint"
                    android:maxLines="1"
                    android:inputType="number"
                    android:id="@+id/ResContactNumber"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:gravity="center|bottom">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Gender:"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:textScaleX=".7"/>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="right|bottom">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Male"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:textScaleX=".7"
                        android:layout_marginRight="5dp"
                        android:id="@+id/ResMale"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Female"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:textScaleX=".7"
                        android:layout_marginRight="5dp"
                        android:id="@+id/ResFemale"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/chooseImage"
                    android:visibility="gone"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Photo"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:onClick="choosePhoto"
                        android:id="@+id/chooseBTN"/>

            </LinearLayout>



           <!-- <EditText
                android:layout_margin="5dp"
