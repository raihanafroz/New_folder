<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        android:padding="5dp">

        <android.support.design.widget.TextInputLayout
            android:layout_margin="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:id="@+id/checkFromWhere">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/password_24dp"
                android:drawableStart="@drawable/password_24dp"
                android:drawablePadding="10dp"
                android:hint="Old password"
                android:fontFamily="@font/kurale"
                android:textColor="@color/input_text_color"
                android:textColorHint="@color/input_hint_color"
                android:maxLines="1"
                android:inputType="textPassword"
                android:id="@+id/admin_change_password_old"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="16sp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_margin="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/password_24dp"
                android:drawableStart="@drawable/password_24dp"
                android:drawablePadding="10dp"
                android:hint="New password"
                android:fontFamily="@font/kurale"
                android:textColor="@color/input_text_color"
                android:textColorHint="@color/input_hint_color"
                android:maxLines="1"
                android:inputType="textPassword"
                android:id="@+id/admin_change_password_new"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="16sp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_margin="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/password_24dp"
                android:drawableStart="@drawable/password_24dp"
                android:drawablePadding="10dp"
                android:hint="Confirm password"
                android:fontFamily="@font/kurale"
                android:textColor="@color/input_text_color"
                android:textColorHint="@color/input_hint_color"
                android:maxLines="1"
                android:inputType="textPassword"
                android:id="@+id/admin_change_password_confirm"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="16sp"/>
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center|left"
            android:layout_margin="6dp">

            <Button
                android:id="@+id/admin_change_password_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Save"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:background="@drawable/btn_blue"
                android:textColor="@color/text_white"
                android:textStyle="bold"
                android:layout_margin="4dp"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>